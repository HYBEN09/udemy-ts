{
  "compilerOptions": {
    "target": "ESNext",

    "module": "ES2015",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowUmdGlobalAccess": true,
    "sourceMap": true,
    "outDir": "./public/scripts",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
